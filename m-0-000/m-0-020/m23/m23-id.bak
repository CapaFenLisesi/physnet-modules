\begin{IdItems}
\IdTitle{Relativistic Energy: Thresholds for Particle Reactions, Binding Energies}

\IdAuthor{P.\,Signell, Dept.\,of Physics, Mich.\,State Univ.}

\IdVersEval{2/22/99}{B1}

\begin{Hours/Pages} \HR{1} \TX{5} \LG{1} \RD{7} \PS{2} \ME{2} \end{Hours/Pages}

\begin{InputSkills}
\item [1.]  Analyze linear collisions using conservation of energy \prrqone{0-21}.
\item [2.]  Expand a function around a point using Taylor's series \prrqone{0-4}.
\end{InputSkills}

\begin{KnowledgeSkills}
\item [K1.] Reduce the expression for relativistic kinetic energy to its
non-relativistic form, starting from the general expression for Taylor's
series.
\end{KnowledgeSkills}

\begin{ProblemSolvingSkills}
\item [S1.] Calculate CM-frame thresholds for given 2\,$\Rightarrow$\,2 particle reactions using
Conservation of Energy and the masses of the four particles involved, and
vice versa.
\item [S2.] Calculate binding energies using Conservation of Energy and the masses of
the separated and conglomerate given objects, and vice versa.
\end{ProblemSolvingSkills}

